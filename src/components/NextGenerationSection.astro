---
import { Image } from "astro:assets";
// NextGenerationSection.astro
---

<section
  class="relative overflow-hidden bg-[#e8e4d9] py-20"
>
  <div class="container mx-auto px-4">
    <!-- Heading -->
    <div class="mb-5 text-center">
      <h2
        class="mx-auto mb-6 max-w-4xl text-4xl leading-tight font-bold text-gray-900"
      >
        Una iglesia que conquista casas, familias y almas.
      </h2>
      <p class="text-xl text-amber-700 italic md:text-2xl">
        Rooted in Christ, Ready for Tomorrow.
      </p>
    </div>

    <!-- Polaroid Images Grid -->
    <div
      class="mx-auto flex max-w-7xl flex-wrap items-center justify-center gap-8 md:gap-12 lg:gap-16"
    >
      <!-- Image 1 (visible on all screens) -->
      <div
        class="polaroid w-64 -rotate-3 transform sm:w-72 md:w-80 lg:w-96"
      >
        <div class="bg-white p-4 shadow-2xl">
          <Image
            src="/assets/test-1.jpg"
            alt="Community member"
            width="400"
            height="400"
            class="aspect-square w-full object-cover"
          />
          <div class="mt-3 h-3"></div>
        </div>
      </div>

      <!-- Image 2 (hidden on mobile, visible on md+) -->
      <div
        class="polaroid w-72 rotate-2 transform md:block md:w-80 lg:w-96"
      >
        <div class="bg-white p-4 shadow-2xl">
          <img
            src="https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?w=400&h=400&fit=crop"
            alt="Community service"
            class="aspect-square w-full object-cover"
          />
          <div class="mt-3 h-3"></div>
        </div>
      </div>

      <!-- Image 3 (hidden on mobile, visible on md+) -->
      <div
        class="polaroid w-72 -rotate-2 transform md:block md:w-80 lg:w-96"
      >
        <div class="bg-white p-4 shadow-2xl">
          <img
            src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=400&h=400&fit=crop"
            alt="Youth gathering"
            class="aspect-square w-full object-cover"
          />
          <div class="mt-3 h-3"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .polaroid {
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.116));
  }
</style>
